names = []

name3 = str(input("enter the name of three people you want to invite to a party"))
name2 = str(input("enter the name of three people you want to invite to a party"))
name1 = str(input("enter the name of three people you want to invite to a party"))
names.append(name1)
names.append(name2)
names.append(name3)
a = True
while a == True:
     more = str(input("do you want to add more names"))
     if more == "yes":
        name = str(input("enter the name of the person you want to invite to a party"))
        names.append(name)
     else:
         a = False

print(len(names))
