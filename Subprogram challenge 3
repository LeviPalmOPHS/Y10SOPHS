def mariokart():
    print("press 1 for 1 player")
    print("press 2 for 2 player")
    print("press 3 for online")
    print("press 4 to exit")

    userinput = int(input("enter 1, 2, 3 or 4"))

    if userinput == 1:
        print("1 player selected")
    elif userinput == 2:
        print("2 player selected")
    elif userinput == 3:
        print("Online selected")
    elif userinput == 4:
        print("Exiting")

mariokart()
